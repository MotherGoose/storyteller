<UserControl x:Class="StoryTeller.UserInterface.Examples.FixtureNodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="248" d:DesignWidth="406">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" >
            <Label Name="caption" Background="AntiqueWhite" DockPanel.Dock="Left"
                   FontWeight="SemiBold"
                   FontSize="14"
                   Margin="10 10 5 10">The Description</Label>
            <Label Name="description" Background="AntiqueWhite" DockPanel.Dock="Left"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="10 10 20 10">The Description</Label>
            <Button Name="refresh" ClickMode="Release" DockPanel.Dock="Right"  
                    Width="65"
                    Content="Refresh" Margin="3 3 3 3" />
        </DockPanel>
        <ScrollViewer>
            <StackPanel Name="Tests"  Orientation="Vertical" Margin="25 0 0 0">
            
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
